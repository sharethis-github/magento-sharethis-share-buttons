<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd"
>
    <system>
        <tab id="sharethis" translate="label" sortOrder="400">
            <label>ShareThis Extensions</label>
        </tab>
        <section
                id="sharethis"
                translate="label"
                type="text"
                sortOrder="300"
                showInDefault="1"
                showInWebsite="0"
                showInStore="0"
        >
            <label>Yoink</label>
            <tab>sharethis</tab>
            <resource>Magento_Sales::config_sales</resource>
        </section>
        <section
                id="stsharebuttons"
                translate="label"
                type="text"
                sortOrder="100"
                showInDefault="1"
                showInWebsite="1"
                showInStore="1"
        >
            <label>ShareButtons</label>
            <tab>stsharebuttons</tab>
            <resource>ShareThis_ShareButtons::configuration</resource>
        </section>
    </system>
</config>
