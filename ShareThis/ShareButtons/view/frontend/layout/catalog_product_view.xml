<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceContainer name="product.info.main">
                <block class="ShareThis\ShareButtons\Block\ShareButtons" name="st.ShareButtons.InlineCart"
                       template="ShareThis_ShareButtons::sharethis-inline-share-buttons.phtml">
                    <arguments>
                        <argument name="page" xsi:type="string">under_cart</argument>
                        <argument name="position" xsi:type="string">under_cart</argument>
                        <argument name="type" xsi:type="string">inline</argument>
                    </arguments>
                </block>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
